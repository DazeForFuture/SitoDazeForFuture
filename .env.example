# ============================================================================
# Flask Configuration - Security
# ============================================================================

# Secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your-secret-key-here-min-32-chars

# Admin password for admin registration (change this!)
ADMIN_PASSWORD=your-admin-password-here

# ============================================================================
# API Security
# ============================================================================

# API Key for sensor endpoints (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
API_KEY=your-api-key-here

# ============================================================================
# CORS Configuration
# ============================================================================

# Comma-separated list of allowed origins (no spaces)
# Example: https://example.com,https://app.example.com
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# Sensor Configuration (centrale.py)
# ============================================================================

# Database file path
DB_FILE=../../database/daticentrale.db

# Host and port
HOST=0.0.0.0
PORT=5005

# Serial configuration
ENABLE_SERIAL=true
SERIAL_PATH=
SERIAL_BAUD=115200

# WiFi freshness threshold in milliseconds
WIFI_FRESH_MS=60000

# ============================================================================
# File Upload Configuration
# ============================================================================

# Maximum content length in bytes (8MB default)
MAX_CONTENT_LENGTH=8388608

# ============================================================================
# Production Settings
# ============================================================================

# Set to 'production' for production deployments
FLASK_ENV=development

# ============================================================================
# Logging
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
